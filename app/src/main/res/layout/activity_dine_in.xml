<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.muhammadrinadhiputra_1202152162_modul2.DineIn">


    <TextView
        android:id="@+id/text_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Detail Customer :"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/text_namadine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_nomeja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_namadine"
        android:layout_alignStart="@+id/text_namadine"
        android:layout_below="@+id/text_namadine"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="26dp"
        android:text="No. Meja"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_namadine"
        android:layout_alignRight="@+id/text_namadine"
        android:layout_alignTop="@+id/text_nomeja">
    </Spinner>

    <Button
        android:id="@+id/button_pilihdinein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nomeja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Pilih Pesanan"
        android:onClick="pilihPesanan"
        android:backgroundTint="hijau"
        android:textSize="18sp" />
</RelativeLayout>
